<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfPlus.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Helpers.xaml" />
        <ResourceDictionary Source="WindowStyle.xaml" />
        <ResourceDictionary Source="TextBlockStyle.xaml" />
        <ResourceDictionary Source="ButtonStyle.xaml" />
        <ResourceDictionary Source="TextBoxStyle.xaml" />
        <ResourceDictionary Source="ComboBoxStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type Window}" BasedOn="{StaticResource WindowStyle}" />
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockStyle}" />
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}" />
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}" />
    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ComboBoxStyle}" />
</ResourceDictionary>